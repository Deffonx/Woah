{
  "manifest_version": 3,
  "name": "Eruda AI Chatbot",
  "version": "1.0",
  "description": "A Chrome extension that integrates an AI chatbot with Eruda.",
  "permissions": ["storage", "activeTab", "scripting"],
  "host_permissions": ["*://*/*"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ]
}
